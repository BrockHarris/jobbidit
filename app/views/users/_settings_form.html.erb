<%= form_for @user, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.text_field :username, :placeholder => "Username" %><br/>
  <%= f.select :role, [['User','placer'],['Contractor','provider']] %><br/>
  <%= f.text_field :email, :placeholder => "Email" %> <br/>
  <%= f.password_field :password, :placeholder => "New Password" %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password" %><br/>
  <%= f.text_field :firstname, :placeholder => "First Name" %> <br/>
  <%= f.text_field :lastname, :placeholder => "Last Name" %> <br/>
  <%= f.text_field :address, :placeholder => "Street Address" %> <br/>
  <%= f.select :state, us_states %><br/>
  <%= f.text_field :zip, :placeholder => "Zip Code" %> <br/>
  <%= f.text_field :phone, :placeholder => "Phone Number" %> <br/>
  <%= f.submit 'Update' %>
<% end %>