<h3>Admin Panel Access Page:</h3>

<%= form_for @new_admin, :html=> { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.text_field :username, :placeholder => "Username" %><br/>
  <%= f.text_field :email, :placeholder => "Email" %> <br/>
  <%= f.password_field :password, :placeholder => "Password" %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %><br/>
  <%= f.submit 'Register' %>
<% end %>
<p/>

<%= form_tag adminsessions_path do %>
	Username/Email <br/>
	<%= text_field_tag :login, params[:login] %> <br/>
	Password <br/>
  <%= password_field_tag :password, ""%> <br/>
  <%= submit_tag "Sign in" %>
<% end %>